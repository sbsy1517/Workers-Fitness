                                .login Have a account?
                                        br
                                        a(href="membership-login.html") LOGIN HERE
                        .container#check-member
                            .wrap#check-member-form
                                h3 CHECK MEMBERSHIP
                                .form-row
                                    .col-12.check-member-form
                                        label(for='citizenID') CITIZEN ID*
                                        input#citizenID.form-control(type='text', placeholder='EX : A123456789', required)
                                        .invalid-feedback
                                            | CITIZEN ID is required.
                                    .col-12.check-member-form.mt-30
                                        label(for="memberID") MEMBERCARD ID
                                        input#memberID.form-control(type='text',placeholder='EX : WF010001', required)
                                        .invalid-feedback
                                            | MEMBERCARD ID is required.
                                    .col-12.check-member-form.mt-30
                                        label(for='birth') DATE OF BIRTH*
                                        input#birth.form-control(type='text', placeholder='EX : 19961028', required)
                                        .invalid-feedback
                                            | Date of birth is required.
                                .submit.d-flex.align-items-center
                                    button.back-btn#check-member-back
                                        span BACK
                                    button.submit-btn#check-member-next(type='button') 
                                        p NEXT
                                        i.fas.fa-arrow-right
                        .container#link-up
                            .wrap#link-up-form
                                h3 LINK UP WITH EMAIL
                                .form-row
                                    .col-12.link-up-form
                                        label(for='email') EMAIL*
                                        input#email.form-control(type='email', placeholder=' ', required )
                                        .invalid-feedback
                                            | Email is required.
                                    .col-12.link-up-form.mt-30
                                        label.pw(for="password") PASSWORD*
                                        .input-password
                                        input#password.form-control(type='password', placeholder='', required)
                                        .invalid-feedback
                                            | Password is required. 
                                    .col-12.link-up-form.mt-30
                                        label.comfirm-pw(for="comfirm-password") CONFIRM PASSWORD*
                                        .input-comfirm-pw
                                        input#comfirm-pw.form-control(type='password', placeholder='', required)
                                        .invalid-feedback
                                            | Confirm password is required. 
                                .submit.d-flex.align-items-center
                                    button.back-btn#link-up-back
                                        span BACK
                                    button.submit-btn#link-up-next(type='button') 
                                        p NEXT
                                        i.fas.fa-arrow-right
                        .container#verify-email
                            .wrap#verify-email-form

                                h3 GREAT, LAST STEP!
                                .form-row
                                    .col-12.verify-email-form
                                        label(for='verifyemail') EMAIL VERIFICATION CODE*
                                        input#verifyemail.form-control(type='text', placeholder=' ', required )
                                        .invalid-feedback
                                            | Email verification code is required. 
                                    .col-12.disabled
                                        label
                                        input.form-control(disabled)
                                        .block.w-100.h-100
                                .submit.d-flex.align-items-center
                                    button.back-btn#verify-mail-back
                                        span BACK
                                    button.submit-btn(type='submit') 
                                        p NEXT
                                        i.fas.fa-arrow-right
